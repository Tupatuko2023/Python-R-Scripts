# Auto-load local config without printing values.
if [ -f "config/.env" ]; then
  set -a
  . "config/.env"
  set +a
fi

# Fail-closed preflight (do not echo DATA_ROOT).
if [ -z "${DATA_ROOT:-}" ]; then
  echo "DATA_ROOT missing (set it in config/.env)" >&2
  exit 1
fi
if [ ! -d "${DATA_ROOT}" ]; then
  echo "DATA_ROOT invalid (directory missing)" >&2
  exit 1
fi
