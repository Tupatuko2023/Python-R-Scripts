{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint-cli2/main/schema/markdownlint-cli2-config-schema.json",
  "config": {
    "default": true,
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": true,
      "headings": false,
      "headers": false
    },
    "MD033": false,
    "MD041": false,
    "MD060": false
  },
  "ignores": [
    "node_modules/**",
    ".gemini/**/*.md",
    "AGENTS.md",
    "CLAUDE_PERMISSIONS_SETUP.md",
    "Fear-of-Falling/**/*.md",
    "Electronic-Frailty-Index/report/**/*.md"
  ]
}
