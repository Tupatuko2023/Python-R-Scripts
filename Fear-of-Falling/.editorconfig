root = true

# Default: turvalliset peruslinjat kaikelle
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

indent_style = space
indent_size = 2

trim_trailing_whitespace = true

# Python: PEP8/Black-yhteensopiva oletus
[*.py]
indent_size = 4
max_line_length = 88

# R: analyysirepoissa 2-spaces on yleinen; lintr/tyylit usein 120
[*.{R,r}]
indent_size = 2
max_line_length = 120

# Quarto / R Markdown: pidä 2-spaces, mutta älä trimmaa trailing whitespacea (hard line breaks)
[*.{md,Rmd,rmd,qmd}]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# YAML / JSON / TOML: 2-spaces on de facto -oletus ja vähentää diffejä
[*.{yml,yaml,json,toml}]
indent_size = 2

# Shellit: usein 2-spaces (ei pakota tabia)
[*.{sh,bash,zsh}]
indent_size = 2

# Makefile vaatii tabit resepteissä
[Makefile]
indent_style = tab
