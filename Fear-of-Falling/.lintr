linters: linters_with_defaults(
  line_length_linter = line_length_linter(120L, ignore_string_bodies = TRUE),
  indentation_linter = indentation_linter(indent = 2L),
  commented_code_linter = NULL,
  object_usage_linter = NULL,
  object_name_linter = object_name_linter(styles = c("snake_case", "dotted.case", "camelCase", "CamelCase", "symbols")),
  cyclocomp_linter = cyclocomp_linter(complexity_limit = 40L)
)

exclusions: list(
  "renv",
  "outputs",
  "data",
  ".git",
  ".Rproj.user"
)
